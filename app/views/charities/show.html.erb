<h1>@charity.name</h1>
<h2><a href=@charity.website></a>Contact: <%= @charity.email %></h2>
<p>@charity.description</p>

<%= link_to "Donate to" @charity.name, new_charity_transaction_path(@charity), class="btn btn-primary" %>

<% @charity.photos.each do |photo| %>
  <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
<% end %>
